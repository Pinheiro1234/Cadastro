@model ContatoModel
@{
    ViewData["Title"] = "Confirmação para apagar cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Clientes" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Clientes" asp-route-id="@Model.id" asp-action="Apagar">Confirmar exclusão</a>

